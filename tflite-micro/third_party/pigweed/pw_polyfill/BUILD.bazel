load("@rules_cc//cc:cc_library.bzl", "cc_library")
load("@rules_python//sphinxdocs:sphinx_docs_library.bzl", "sphinx_docs_library")
load("//pw_build:compatibility.bzl", "incompatible_with_mcu")
load("//pw_unit_test:pw_cc_test.bzl", "pw_cc_test")

package(default_visibility = ["//visibility:public"])

licenses(["notice"])

cc_library(
    name = "pw_polyfill",
    hdrs = [
        "public/pw_polyfill/language_feature_macros.h",
        "public/pw_polyfill/standard.h",
        "public/pw_polyfill/static_assert.h",
    ],
    strip_include_prefix = "public",
)

cc_library(
    name = "standard_library",
    hdrs = [
        "standard_library_public/pw_polyfill/standard_library/namespace.h",
    ],
    includes = ["standard_library_public"],
    visibility = ["//pw_minimal_cpp_stdlib:__pkg__"],
)

pw_cc_test(
    name = "test",
    srcs = [
        "c_test.c",
        "test.cc",
    ],
    deps = [
        ":pw_polyfill",
        ":standard_library",
    ],
)

filegroup(
    name = "doxygen",
    srcs = [
        "public/pw_polyfill/language_feature_macros.h",
        "public/pw_polyfill/standard.h",
    ],
)

sphinx_docs_library(
    name = "docs",
    srcs = [
        "Kconfig",
        "c_test.c",
        "docs.rst",
    ],
    prefix = "pw_polyfill/",
    target_compatible_with = incompatible_with_mcu(),
)

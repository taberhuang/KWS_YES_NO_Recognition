{# Bazel build file helper macros. #}

{% macro file_list(build, files) -%}
{% if files|length == 1 %}
["{{ build.relative_file(files|first) }}"],
{%- else %}
[
{% for src in files|sort %}
        "{{ build.relative_file(src) }}",
{% endfor %}
    ],
{%- endif %}
{%- endmacro -%}

{% macro deps_list(deps) -%}
{% if deps|length == 1 %}
["{{ deps|first }}"],
{%- else %}
[
{% for dep in deps|sort %}
        "{{ dep }}",
{% endfor %}
    ],
{%- endif %}
{%- endmacro -%}

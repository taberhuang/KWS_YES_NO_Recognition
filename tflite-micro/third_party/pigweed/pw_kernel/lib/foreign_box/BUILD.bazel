load("@pigweed//pw_build:compatibility.bzl", "incompatible_with_mcu")
load("@rules_rust//rust:defs.bzl", "rust_doc_test", "rust_library", "rust_test")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "foreign_box",
    srcs = ["foreign_box.rs"],
    tags = ["kernel"],
    deps = [
        "//pw_kernel/lib/pw_assert",
        "//pw_kernel/lib/pw_atomic",
    ],
)

# foreign_box uses the std rust test harness to allow asserting that it panics
# in the correct places.
rust_test(
    name = "foreign_box_test",
    crate = ":foreign_box",
    crate_features = ["core_panic"],
    tags = ["kernel"],
    target_compatible_with = incompatible_with_mcu(),
    deps = ["//pw_kernel/subsys/console:console_backend"],
)

rust_doc_test(
    name = "foreign_box_doc_test",
    crate = ":foreign_box",
    tags = [
        "kernel",
        "kernel_doc_test",
    ],
    target_compatible_with = incompatible_with_mcu(),
)

    name = "pw_thread",
    srcs = [
        "pw_thread/__init__.py",
        "pw_thread/thread_analyzer.py",
    ],
    imports = ["."],
    deps = [
        "//pw_symbolizer/py:pw_symbolizer",
        "//pw_thread:thread_proto_py_pb2",
        "//pw_tokenizer/py:pw_tokenizer",
    ],
)


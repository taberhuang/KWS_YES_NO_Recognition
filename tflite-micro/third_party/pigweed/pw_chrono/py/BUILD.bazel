    name = "pw_chrono",
    srcs = [
        "pw_chrono/__init__.py",
        "pw_chrono/timestamp_analyzer.py",
    ],
    imports = ["."],
    deps = [
        "//pw_chrono:chrono_proto_pb2",
        "//pw_tokenizer/py:pw_tokenizer",

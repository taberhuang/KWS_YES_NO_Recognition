    name = "timestamp_analyzer_test",
    srcs = [
        "timestamp_analyzer_test.py",
    ],
    deps = [
        ":pw_chrono",
        "//pw_chrono:chrono_proto_pb2",
        "//pw_tokenizer/py:pw_tokenizer",
    ],
)
